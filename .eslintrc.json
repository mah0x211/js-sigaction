{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "max-len": [
            "error",
            { "code": 80 }
        ],
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}
