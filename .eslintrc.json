{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "max-len": ["error", { "code": 80 }],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "semi": ["error", "always"],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^var_args$" }],
        "no-console": "off"
    }
}
